{
  "manifest_version": 3,
  "name": "LingoMate",
  "version": "0.1.0",
  "description": "Universal side-car chat translation powered by Lingo.dev-oriented workflows.",
  "permissions": ["sidePanel", "activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://x.com/*",
    "https://discord.com/*",
    "https://web.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://x.com/*",
        "https://discord.com/*",
        "https://web.telegram.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "LingoMate"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}
